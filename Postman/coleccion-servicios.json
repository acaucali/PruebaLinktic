{
  "info": {
    "name": "Microservicios - Productos & Inventario",
    "_postman_id": "b99ef2ab-7724-4e38-996f-abcdeff99887",
    "description": "Colección unificada con autenticación por API Key para los microservicios de Productos, Inventario y Compras.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "host_productos",
      "value": "http://localhost:9090"
    },
    {
      "key": "host_inventario",
      "value": "http://localhost:8090"
    },
    {
      "key": "api_key",
      "value": "prueba-linktic-service"
    }
  ],
  "item": [
    {
      "name": "Productos",
      "item": [
        {
          "name": "Listar Productos",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{api_key}}", "type": "text" }
            ],
            "url": {
              "raw": "{{host_productos}}/api/productos/producto",
              "host": ["{{host_productos}}"],
              "path": ["api", "productos", "producto"]
            }
          }
        },
        {
          "name": "Buscar Producto por ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{api_key}}", "type": "text" }
            ],
            "url": {
              "raw": "{{host_productos}}/api/productos/producto/1",
              "host": ["{{host_productos}}"],
              "path": ["api", "productos","producto", "1"]
            }
          }
        },
        {
          "name": "Crear Producto",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "{{api_key}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Laptop Dell\",\n  \"precio\": 3500,\n  \"descripcion\": \"Laptop para trabajo pesado\"\n}"
            },
            "url": {
              "raw": "{{host_productos}}/api/productos/producto",
              "host": ["{{host_productos}}"],
              "path": ["api", "productos", "producto"]
            }
          }
        }
      ]
    },
    {
      "name": "Inventario",
      "item": [
        {
          "name": "Buscar Inventario por ID de Producto",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{api_key}}", "type": "text" }
            ],
            "url": {
              "raw": "{{host_inventario}}/api/servicios/inventario/consulta/1",
              "host": ["{{host_inventario}}"],
              "path": ["api", "servicios","inventario", "consulta", "1"]
            }
          }
        },
        {
          "name": "Actualizar Stock Cantidades",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "{{api_key}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"cantidad\": 50 }"
            },
            "url": {
              "raw": "{{host_inventario}}/api/inventario/producto/1",
              "host": ["{{host_inventario}}"],
              "path": ["api", "servicios","inventario", "producto", "1"]
            }
          }
        },
        {
          "name": "Inventario - Registrar producto",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "{{api_key}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productoId\": 1,\n  \"cantidad\": 50\n}"
            },
            "url": {
              "raw": "{{host_inventario}}/api/servicios/inventario",
              "host": ["{{host_inventario}}"],
              "path": ["api", "servicios","inventario"]
            }
          }
        }
      ]
    },
    {
      "name": "Compras",
      "item": [
        {
          "name": "Realizar Compra",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "{{api_key}}", "type": "text" }
            ],
            "url": {
              "raw": "{{host_inventario}}/api/compras/compra/1/5",
              "host": ["{{host_inventario}}"],
              "path": ["api", "compras", "compra", "1", "5"]
            }
          }
        }
      ]
    }
  ]
}
